<div class="dashboard-container">
  <div class="dashboard-header">
  </div>
  <div class="dashboard-container2">
    <% if @groups.present? %>
      <% @groups.each do |group| %>
        <div class='category-container'>
        <div class='category-container5'>
          <%= link_to group_path(group), class: 'category-link2' do %>
          <%= image_tag(group.icon, alt: group.name, class: "group-icon2") %>
          <div class="category-info2">
       <h3 class="category-name2"><%= group.name %></h3>
    </div>
  <% end %>
</div>

        <div>
          <%= link_to 'Details', group_path(group), class: 'button detail-button' %>
          <%= link_to 'Edit', edit_group_path(group), class: 'button edit-button' %>
          <%= button_to 'Delete', group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button delete-button delete-group-button', form: { "data-turbo" => "false" } %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No groups available.</p>
  <% end %>
  <%= link_to 'Add a new category', new_group_path, class: 'link-all-transactions' %>
  </div>
</div>
